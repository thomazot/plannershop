.banner-rulers
    margin: 0 !important
    padding: 30px 0

    &__container
        width: 100%
        max-width: viewport
        margin: 0 auto

    &__list
        display: flex
        justify-content: space-between
        align-items: center
        margin: -10px

    &__item
        display: flex
        justify-content: space-between
        align-items: flex-start
        font-size: 12px
        font-weight: light
        color: color_one
        padding: 10px

    &__title
        font-weight: bold
        text-transform: uppercase
        margin-bottom: 10px

    &__figure
        flex: 0 0 80px

    &__desc
        max-width: 170px

    .owl
        &-buttons
            display: block

        &-item
            display: flex
            justify-content: center

        &-prev, &-next
            background: none
            border: 0
            box-shadow: none
            color: color_one

            &:before
                background: none